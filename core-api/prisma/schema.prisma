// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  role      UserRole @default(STUDENT)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile      UserProfile?
  applications Application[]
  documents    Document[]

  @@map("users")
}

enum UserRole {
  STUDENT
  ADMIN
  MODERATOR
}

// User Profile Model
model UserProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  phone       String?
  location    String?
  citizenship String?
  dateOfBirth DateTime?
  gender      String?
  ethnicity   String?
  gpa         String?  // Changed to String to support formats like "4.25/5" or "3.75/4"
  major       String?
  university  String?
  graduationYear Int?
  linkedIn    String?
  website     String?
  bio         String?
  cvData      Json?    // Parsed CV data
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  education       Education[]
  workExperience  WorkExperience[]
  skills          Skill[]
  projects        Project[]
  awards          Award[]

  @@map("user_profiles")
}

// Education Model
model Education {
  id              String      @id @default(uuid())
  profileId       String
  profile         UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  institution     String
  degree          String
  fieldOfStudy    String?
  startDate       DateTime
  endDate         DateTime?
  gpa             Float?
  honors          String[]
  relevantCourses String[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@map("education")
}

// Work Experience Model
model WorkExperience {
  id                String      @id @default(uuid())
  profileId         String
  profile           UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  company           String
  position          String
  location          String?
  startDate         DateTime
  endDate           DateTime?
  responsibilities  String[]
  achievements      String[]
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@map("work_experience")
}

// Skills Model
model Skill {
  id        String      @id @default(uuid())
  profileId String
  profile   UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  category  SkillCategory
  name      String
  level     SkillLevel?
  createdAt DateTime    @default(now())

  @@map("skills")
}

enum SkillCategory {
  TECHNICAL
  LANGUAGE
  SOFT_SKILL
  CERTIFICATION
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

// Projects Model
model Project {
  id           String      @id @default(uuid())
  profileId    String
  profile      UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  name         String
  description  String
  technologies String[]
  url          String?
  date         DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("projects")
}

// Awards Model
model Award {
  id          String      @id @default(uuid())
  profileId   String
  profile     UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  title       String
  issuer      String
  date        DateTime
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("awards")
}

// Scholarship Model
model Scholarship {
  id              String   @id @default(uuid())
  name            String
  organization    String
  amount          Float?
  currency        String   @default("USD")
  deadline        DateTime
  description     String
  eligibility     Json     // Eligibility criteria as JSON
  requirements    String[]
  applicationUrl  String
  category        String[]
  country         String[]
  fieldOfStudy    String[]
  degreeLevel     String[]
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  applications Application[]

  @@map("scholarships")
}

// Application Model
model Application {
  id            String            @id @default(uuid())
  userId        String
  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  scholarshipId String
  scholarship   Scholarship       @relation(fields: [scholarshipId], references: [id], onDelete: Cascade)
  status        ApplicationStatus @default(DRAFT)
  matchScore    Float?
  matchRationale Json?            // AI matching rationale
  priority      Priority          @default(MEDIUM)
  notes         String?
  submittedAt   DateTime?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  documents Document[]

  @@map("applications")
}

enum ApplicationStatus {
  DRAFT
  IN_PROGRESS
  READY_TO_SUBMIT
  SUBMITTED
  UNDER_REVIEW
  INTERVIEW
  ACCEPTED
  REJECTED
  WITHDRAWN
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

// Document Model
model Document {
  id            String       @id @default(uuid())
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  applicationId String?
  application   Application? @relation(fields: [applicationId], references: [id], onDelete: SetNull)
  type          DocumentType
  title         String
  content       String       // Document content
  wordCount     Int?
  version       Int          @default(1)
  isGenerated   Boolean      @default(false) // AI-generated
  metadata      Json?        // Additional metadata
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@map("documents")
}

enum DocumentType {
  CV
  RESUME
  STATEMENT_OF_PURPOSE
  PERSONAL_STATEMENT
  COVER_LETTER
  MOTIVATION_LETTER
  RESEARCH_PROPOSAL
  DIVERSITY_STATEMENT
  LEADERSHIP_ESSAY
  RECOMMENDATION_LETTER
  TRANSCRIPT
  OTHER
}
