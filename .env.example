# Scholastica Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: API Keys
# ===========================================

# Google Gemini API Key (required for LLM service)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Shared secret for service-to-service authentication
CORE_API_SECRET=your_secure_random_secret_here

# ===========================================
# Database Configuration (optional - defaults work for Docker)
# ===========================================
POSTGRES_USER=scholarhunter
POSTGRES_PASSWORD=scholarhunter_password
POSTGRES_DB=scholarhunter
POSTGRES_PORT=5432

MONGO_USER=scholarhunter
MONGO_PASSWORD=scholarhunter_password
MONGO_PORT=27017

REDIS_PASSWORD=scholarhunter_password
REDIS_PORT=6379

# ===========================================
# Service Ports (optional - defaults work for Docker)
# ===========================================
LLM_SERVICE_PORT=8000
CORE_API_PORT=3000
FRONTEND_PORT=3001

# ===========================================
# Environment Settings
# ===========================================
NODE_ENV=development
ENVIRONMENT=development
LOG_LEVEL=INFO

# Frontend API URL (for browser requests)
NEXT_PUBLIC_API_URL=http://localhost:3000/api
